# -*-dockerfile-*-

# Install Node
RUN NODE_VERSION="7" && \ 
    curl -sL https://deb.nodesource.com/setup_${NODE_VERSION}.x | bash && \
    apt-get install -y --no-install-recommends nodejs

# Install essential packages
RUN npm install -g \
      tern \
      js-beautify \
      eslint

# Install Yarn
RUN YARN_VERSION="0.21.3" && \
    npm install --global yarn@${YARN_VERSION}
